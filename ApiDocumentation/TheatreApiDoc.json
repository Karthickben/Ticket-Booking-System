definitions:
  Screen_Inbound:
    type: "object"
    properties:
      theatreId:
        type: "integer"
        example: 3
      screenName: 
        type: "string"
        example: "Audi"
      screenStatus:
        type: "string"
        example: "YetToBeOpened"
      adminId:
        type: "string"
        example: "admin"
      noOfSeatingRows:
        type: "integer"
        example: 30
      noOfSeatingColumns:
        type: "integer"
        example: 20
          
          
      
  Screen_Outbound:
    type: "object"
